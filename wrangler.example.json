{
  "$schema": "./node_modules/wrangler/config-schema.json",
  "compatibility_date": "2025-10-08",
  "main": "src/index.ts",
  "name": "openauthster-issuer",
  "routes": [
    {
      "pattern": "*-auth.<YOUR_DOMAIN>/*",
      "zone_name": "<YOUR_ZONE_NAME>",
      "custom_domain": false
    }
  ],
  "upload_source_maps": true,
  "d1_databases": [
    {
      "binding": "AUTH_DB",
      "database_name": "<YOUR_D1_DATABASE_NAME>",
      "database_id": "<YOUR_D1_DATABASE_ID>",
      "migrations_dir": "drizzle/migrations",
      "remote": true
    }
  ],
  "observability": {
    "enabled": true
  },
  "compatibility_flags": ["nodejs_compat"],
  "vars": {
    "WEBUI_ADMIN_EMAILS": "email1@example.com,email2@example.com",
    "WEBUI_ORIGIN_URL": "https://your-webui-domain.com"
  }
}
